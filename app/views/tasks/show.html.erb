<div class="task-content">
  <h2><%= @task.title %></h2>
  <p class="details"><%= @task.details %></p>
  <% if @task.completed %>
  <p> <i class="fa fa-check-square-o"></i> This task is completed </p>
  <% else %>
  <p> <i class="fa fa-square-o"></i> This task is not completed yet </p>
  <% end %>
  </div>
<p> <%= link_to('edit task', edit_task_path) %> </p>
<p><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %> </p>

<p> <%= link_to('back to list', tasks_path) %> </p>
